<Window x:Class="Application_A.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Application_A"
        Title="Application A"
        Height="480"
        Width="770"
        Background="#F2F2F2"
        WindowStartupLocation="CenterScreen">

    <!-- Styles -->
    <Window.Resources>

        <!-- Apple-style button -->
        <Style x:Key="MacButton" TargetType="Button">
            <Setter Property="Padding" Value="10 6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#EAEAEA"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="8"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Hover effect -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFFF"/>
                    <Setter Property="BorderBrush" Value="#C8C8C8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Apple-style Card -->
        <Style x:Key="MacCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#D3D3D3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
        </Style>

    </Window.Resources>


    <!-- MAIN LAYOUT -->
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!-- BUTTON BAR -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 15" HorizontalAlignment="Center">

            <Button Style="{StaticResource MacButton}"
                    Width="165" Margin="6"
                    Content="Null Pointer Fault"
                    Click="Btn_NullPointer"/>

            <Button Style="{StaticResource MacButton}"
                    Width="165" Margin="6"
                    Content="Out of Range Fault"
                    Click="Btn_OutOfRange"/>

            <Button Style="{StaticResource MacButton}"
                    Width="180" Margin="6"
                    Content="Config Mismatch Fault"
                    Click="Btn_ConfigMismatch"/>

            <Button Style="{StaticResource MacButton}"
                    Width="165" Margin="6"
                    Content="Watchdog Timeout"
                    Click="Btn_Timeout"/>

        </StackPanel>


        <!-- LOG PANEL -->
        <Border Grid.Row="1" Style="{StaticResource MacCard}">

            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">

                <ListBox x:Name="LogList"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.CanContentScroll="False"
                         HorizontalContentAlignment="Stretch">

                    <!-- force each item to stretch horizontally -->
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <!-- TEMPLATE FOR LogEntry -->
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:LogEntry}">
                            <Border Margin="0 4"
                                    Padding="4 6"
                                    Background="White"
                                    CornerRadius="6"
                                    BorderBrush="#E5E5E5"
                                    BorderThickness="1">

                                <TextBlock Text="{Binding Message}"
                                           TextWrapping="Wrap"
                                           FontFamily="Consolas"
                                           FontSize="13"
                                           Foreground="{Binding Color}"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
            </ScrollViewer>

        </Border>

    </Grid>
</Window>
